<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.android.mathias.velocity.FragmentCurrent">

    <Chronometer
        android:layout_width="wrap_content"
        android:id="@+id/stopwatch"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/stopwatch_text_size"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_stopwatch_start"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/stopwatch"
        android:text="Start"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_stopwatch_stop"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/btn_stopwatch_start"
        android:text="Stop"/>

</RelativeLayout>
